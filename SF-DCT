        let src = "https://dohertyclinicaltrials--uat.sandbox.my.salesforce-sites.com/lightning/lightning.out.js";
        
        var sfs = document.createElement("script");
        sfs.setAttribute("src", src);
        document.body.appendChild(sfs);
    }    
  </script>
  
